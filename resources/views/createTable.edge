<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Online card tables - create shared table</title>
  @entryPointStyles('app')
  @entryPointScripts('app')
</head>

<body>

  <main>
    <div>
      <h1 class="title">Online card tables - create shared table </h1>

      <h2>create new table</h2>
      <form>
        <legend>This is a placeholder for the new table form</legend>
      </form>

      <h2>Rooms</h2>
      <ul>
        @each(room in rooms)
        <li> <a href="/shared-table/{{room.name}}"> {{room.name }} : {{room.playerCount}} players</a> </li>
        @end
      </ul>
    </div>

  </main>

</body>

</html>
